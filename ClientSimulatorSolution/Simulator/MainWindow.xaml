<Window x:Class="Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Name="DataGridContacts" Margin="5,5,5,1" Text="Sort by:"/>
        <ComboBox Grid.Row="0" Grid.Column="1" Name="ComboBoxCountry" Margin="5"/>
        <ComboBox Grid.Row="0" Grid.Column="2" Name="ComboBoxOwner" Margin="5"/>

        <DataGrid Grid.Row="1" Name="DataGridSimulations" Margin="5,5,5,1" SelectionMode="Single" IsReadOnly="True" Grid.ColumnSpan="3">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="New" Click="DataGridSimulationsNew" />
                    <MenuItem Header="Export" Click="DataGridSimulationsDetails" />
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Window>
