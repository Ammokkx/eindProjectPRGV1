<Window x:Class="Simulator.MakeSimulationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simulator"
        mc:Ignorable="d"
        Title="MakeSimulationWindow" Height="550" Width="800">
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="20*"/>
        <RowDefinition Height="20*"/>
        <RowDefinition Height="20*"/>
        <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
        <RowDefinition Height="20*"/>
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="50"/>

        </Grid.ColumnDefinitions>
    <TextBlock Grid.Row="0" Grid.Column="0" Text="Client" VerticalAlignment="Center" Margin="5"/>
    <TextBox x:Name="TextBoxClient" Grid.Row="0" Grid.Column="1" Margin="5"/>

    <TextBlock Grid.Row="1" Grid.Column="0" Text="Country" VerticalAlignment="Center" Margin="5"/>
    <ComboBox Grid.Row="1" Grid.Column="1" Margin="5" Name="ComboBoxCountry"/>

    <TextBlock Grid.Row="2" Grid.Column="0" Text="Municipalities" VerticalAlignment="Center" Margin="5"/>
        <Button Grid.Row="2" Grid.Column="1" Margin="5" Content="Manage Municipalities" Name="ButtonMunicipalities" Click="ButtonMunicipalities_Click"/>

    <TextBlock Grid.Row="0" Grid.Column="2" Text="# of customers" VerticalAlignment="Center" Margin="5"/>
    <TextBox x:Name="TextBoxCustomers" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="3" Margin="5"/>

 <TextBlock Grid.Row="1" Grid.Column="2" Text="Maximum Age:" VerticalAlignment="Center" Margin="5"/>
 <TextBox Grid.Row="1" Grid.Column="3" Margin="5"  Name="TextBoxMaxAge"/>

        <TextBlock Grid.Row="1" Grid.Column="4" Text="Minumum Age:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="5" Margin="5" Name="TextBoxMinAge"/>

        <TextBlock Grid.Row="2" Grid.Column="2" Text="Year:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="3" Margin="5" Name="TextBoxYear"/>

        <ListBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Margin="5" Name="ListBoxMunicipalities"/>
        <Grid Grid.Column="2" Grid.ColumnSpan="4" Grid.Row="3" Margin="5" Name="GridHouseNrSettings">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>

                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Maximum House Number:" VerticalAlignment="Center" Margin="5"/>
            <TextBox Name="TextBoxMaxHouseNumber" Grid.Row="0" Grid.Column="1"/>
            <TextBlock Text="Frequency letters:" Grid.Row="1" VerticalAlignment="Center" Margin="5"/>
            <TextBox Name="TextBoxFrequencyLetters" Grid.Row="1" Grid.Column="1"/>

        </Grid>

        <Button  Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="6" Margin="5" Content="Upload Simulation" Name="ButtonMakeSimulation" Click="ButtonMakeSimulation_Click"/>
    </Grid>
</Window>
