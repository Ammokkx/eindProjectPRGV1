<Window x:Class="Simulator.SimulationDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simulator"
        mc:Ignorable="d"
        Title="SimulationDetailWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Margin="10,2,10,33" Grid.RowSpan="8">
            <TabItem Header="General Details">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <ListBox x:Name="ListBoxGeneralDetails" Grid.Row="0" Grid.Column="0" Margin="5"/>
                    
                </Grid>
            </TabItem>
            <TabItem Header="Name Details">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Male names:" Grid.Column="0" Grid.Row="0" Margin="5"/>
                    <ListBox x:Name="ListBoxMaleNames" Grid.Row="1" Grid.Column="0" Margin="5"/>
                    <TextBlock Text="Female names:" Grid.Column="1" Grid.Row="0" Margin="5"/>
                    <ListBox x:Name="ListBoxFemaleNames" Grid.Row="1" Grid.Column="1" Margin="5"/>



                    <TextBlock Text="Family names:" Grid.Column="3" Grid.Row="0" Margin="5"/>
                    <ListBox x:Name="ListBoxFamilyNames" Grid.Row="1" Grid.Column="3" Margin="5"/>

                </Grid>
            </TabItem>
            <TabItem Header="Street Details">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Streets per municipality:" Grid.Column="0" Grid.Row="0" Margin="5"/>
                    <ListBox x:Name="ListBoxStreets" Grid.Row="1" Grid.Column="0" Margin="5"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
